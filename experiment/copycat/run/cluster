#! /bin/bash

echo "$@"

export RUST_LOG=info
export RUST_BACKTRACE=full
export REPORT_PERIOD=30

BUILDTYPE=$1
ID=$2
THREADS=$3
MAILBOX_WORKERS=$4
CHAIN_TYPE=$5
CRYPTO=$6
CONN_MULTIPLY=$7
NUM_CLIENTS=$8
CLIENTS_REMAINDER=$9
ACCOUNTS=${10}
MAX_INFLIGHT=${11}
FREQUENCY=${12}
TXN_SPAN=${13}
DISABLE_TXN_DISSEM=${14}

if [[ $DISABLE_TXN_DISSEM == "False" ]]; then
    DISABLE_TXN_DISSEM=""
else
    DISABLE_TXN_DISSEM="--disable-txn-dissem"
fi

if (($ID < $CLIENTS_REMAINDER)); then
    CLIENTS=$((NUM_CLIENTS + 1))
else
    CLIENTS=$NUM_CLIENTS
fi

./blockchain_copycat/target/${BUILDTYPE}/copycat_cluster -i ${ID} -t ${THREADS} \
    -w ${MAILBOX_WORKERS} -m bench_machines.json -n bench_network.json -c ${CHAIN_TYPE} \
    --config bench_validators.json -p ${CRYPTO} -o ${CONN_MULTIPLY} -l ${CLIENTS} \
    -a ${ACCOUNTS} -f ${MAX_INFLIGHT} -q ${FREQUENCY} -s ${TXN_SPAN} \
    ${DISABLE_TXN_DISSEM} --topology bench_topo.json
