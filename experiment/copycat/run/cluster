#! /bin/bash


echo $@

export RUST_LOG=info
export RUST_BACKTRACE=full

BUILDTYPE=$1
ID=$2
THREADS=$3
MAILBOX_WORKERS=$4
NODE_CONCURRENCY=$5
CHAIN_TYPE=$6
CRYPTO=$7
CONN_MULTIPLY=$8
NUM_CLIENTS=$9
CLIENTS_REMAINDER=${10}
ACCOUNTS=${11}
MAX_INFLIGHT=${12}
FREQUENCY=${13}
TXN_SPAN=${14}
DISABLE_TXN_DISSEM=${15}
CONFIG=${16}

if [[ $CONFIG == "" ]]; then
    CONFIG_ARG=""
else
    CONFIG_ARG="--config ${CONFIG}"
fi

if [[ $DISABLE_TXN_DISSEM == "False" ]]; then
    DISABLE_TXN_DISSEM=""
else
    DISABLE_TXN_DISSEM="--disable-txn-dissem"
fi

if (( $ID < $CLIENTS_REMAINDER )); then
    CLIENTS=$(( NUM_CLIENTS + 1 ))
else
    CLIENTS=$NUM_CLIENTS
fi

./blockchain_copycat/target/${BUILDTYPE}/copycat_cluster -i ${ID} -t ${THREADS} \
    -w ${MAILBOX_WORKERS} -m bench_machines.json -n bench_network.json -c ${CHAIN_TYPE} \
    -r ${NODE_CONCURRENCY} -p ${CRYPTO} -o ${CONN_MULTIPLY} -l ${CLIENTS} \
    -a ${ACCOUNTS} -f ${MAX_INFLIGHT} -q ${FREQUENCY} -s ${TXN_SPAN} \
    ${DISABLE_TXN_DISSEM} ${CONFIG_ARG} --topology bench_topo.json
    