#! /bin/bash

export RUST_LOG=debug
export RUST_BACKTRACE=1

BUILDTYPE=$1
MACHINE_ID=$2
LOCAL_ID=$3
CHAIN_TYPE=$4
ACCOUNTS=$5
MAX_INFLIGHT=$6
FREQUENCY=$7
CONFIG=$8

if [[ $CONFIG == "" ]]; then
    CONFIG_ARG=""
else
    CONFIG_ARG="--config ${CONFIG}"
fi

ID=$(( ($MACHINE_ID << 12) + $LOCAL_ID ))
./blockchain_copycat/target/${BUILDTYPE}/copycat_server -i ${ID} -c ${CHAIN_TYPE} -a ${ACCOUNTS} -f ${MAX_INFLIGHT} -q ${FREQUENCY} ${CONFIG_ARG}

