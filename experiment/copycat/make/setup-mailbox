#! /bin/bash

BRANCH=$1

GITHUB_ORG=qusuyan
PROJECT_NAME=mailbox

if [[ ! -e ${PROJECT_NAME} ]]; then
    ssh-keyscan github.com >> ~/.ssh/known_hosts
    git clone git@github.com:${GITHUB_ORG}/${PROJECT_NAME}.git
fi

cd ${PROJECT_NAME}
git pull --ff

echo "Using branch '${BRANCH}'"
git checkout ${BRANCH}

mkdir /dev/shm/mailbox

exit 0
